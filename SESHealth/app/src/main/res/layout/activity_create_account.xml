<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/createAccount_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/whiteColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/createAccEmailET"
                style="@style/LoginStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:hint="@string/email_txt"
                android:inputType="textEmailAddress" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/createAccPasswordET"
                    style="@style/LoginStyles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:hint="@string/password_txt"
                    android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/createAccFirstNameET"
                style="@style/LoginStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:hint="First Name" />

            <EditText
                android:id="@+id/createAccLastNameET"
                style="@style/LoginStyles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:hint="Last Name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/createAccDOBTV"
                    style="@style/LoginStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth: " />

                <TextView
                    android:id="@+id/createAccDOBDateTV"
                    style="@style/LoginStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Select Date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/createAccGenderTV"
                    style="@style/LoginStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Gender" />

                <Spinner
                    android:id="@+id/createAccGenderSpinner"
                    style="@style/LoginStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/createAccBtn"
                style="@style/LoginStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Create Account" />

            <TextView
                android:id="@+id/navToLoginTV"
                style="@style/LoginStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="Already have an account?" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
            </com.google.android.gms.common.SignInButton>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>