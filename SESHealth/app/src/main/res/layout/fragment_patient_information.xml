                    android:background="#aaa"/>

                <TextView
                    android:id="@+id/heightTV"
                    style="@style/patientInfoTVSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
