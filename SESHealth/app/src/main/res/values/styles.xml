<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginStyles" >
        <item name="android:padding">5dp</item>
        <item name="android:textSize">8pt</item>
    </style>
    
    <style name="loginEditTexts" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="loginButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:radius">15dp</item>
    </style>

</resources>
